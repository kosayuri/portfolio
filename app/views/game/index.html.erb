<div class="ranking">
  <%= link_to "ホーム画面に移動", root_path %>
  <table class = "ranking-table">
    <tr>
      <th>順位</th>
      <th>アイコン</th>
      <th>名前</th>
      <th>ハイスコア</th>
    </tr>
    <% @user.each_with_index do |user, i| %>
    <% if user_signed_in? && current_user.id == user.id %>
      <tr class="current-user-ranking">
    <% else %>
      <tr>
    <% end %>
      <td><%= i + 1 %></td>
      <td><%= image_tag user.avatar.url, class: "avatar" %></td>
      <td><%= user.name%></td>
      <td><%= sprintf("%010d", user.hiscore)%></td>
    </tr>
    <% end %>
  </table>
  <%= link_to "トップへ移動", "#header" %>
</div>
