<div class="account-forum">
  <h2><%= t('.change_your_password') %></h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>

    <div class="field">
      <p><%= f.label :password, t('.new_password') %></p>
      <% if @minimum_password_length %>
        <%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %><br />
      <% end %>
      <%= f.password_field :password, autofocus: true, autocomplete: "new-password" %>
    </div>

    <div class="field">
      <p><%= f.label :password_confirmation, t('.confirm_new_password') %></p>
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>

    <div class="actions">
      <%= f.submit t('.change_my_password') %>
    </div>
  <% end %>

  <div class="devise-links">
    <%= render "devise/shared/links" %>
  </div>
</div>
