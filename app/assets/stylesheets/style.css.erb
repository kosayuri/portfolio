* {
  font-family: 'Noto Sans JP', sans-serif;
  box-sizing: border-box;
  word-break: break-all;
}

html,
body,
label,
ul,
ol,
li,
h1,
h2,
h3,
h4,
h5,
h6,
p,
form,
input,
div {
  margin: 0;
  padding: 0;
}

.header {
  display: flex;
  padding: 0 50px;
  height: 70px;
  align-items: center;
  background-color: rgb(156, 204, 108);
}

.header a {
  color: rgb(252, 255, 198);
  text-decoration: none;
}

body {
  background-image: url(<%= asset_path 'background.gif' %>);
}

.top_page {
  padding: 100px 10px;
  margin: 0 auto;
  width: 300px;
}

.top_page a {
  display: block;
  padding: 10px 10px;
  border-radius: 10px;
  text-align: center;
  font-size: 20px;
}

.top_page a:hover {
  color: rgb(252, 255, 198);
  text-decoration: none;
  background-color: rgb(156, 204, 108);
}

.header-right {
  margin-left: auto;
}

.header-right a {
  padding-left: 20px;
  font-size: 20px;
}

@media screen and (max-width: 670px) {

  .header {
    padding: 0 15px;
  }

  .header-right a {
    display: block;
    text-align: center;
  }
}
