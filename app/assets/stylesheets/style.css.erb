* {
  font-family: 'Noto Sans JP', sans-serif;
  box-sizing: border-box;
  word-break: break-all;
}

html,
body,
label,
ul,
ol,
li,
h1,
h2,
h3,
h4,
h5,
h6,
p,
form,
input,
div {
  margin: 0;
  padding: 0;
}

ul {
  list-style: none;
}

img {
  border-radius: 50%;  /* 角丸半径を50%にする(=円形にする) */
  width: 100px;  /* 縦横を同じ値にする */
  height: 100px;  /* 縦横を同じ値にする */
  object-fit: cover; /* 縦横比固定したまま上2つの縦横の範囲内に収まるように配置する */
  display:block;
  margin:0 auto;
}

#header {
  display: flex;
  padding: 0 50px;
  height: 70px;
  align-items: center;
  background-color: rgb(156, 204, 108);
  position: relative;
}

#header a {
  color: rgb(252, 255, 198);
  text-decoration: none;
}

body {
  background-image: url(<%= asset_path 'background.gif' %>);
}

.top_page {
  padding: 100px 10px;
  margin: 0 auto;
  width: 300px;
}

.top_page a {
  display: block;
  padding: 10px 10px;
  border-radius: 10px;
  text-align: center;
  font-size: 20px;
}

.top_page a:hover {
  color: rgb(252, 255, 198);
  text-decoration: none;
  background-color: rgb(156, 204, 108);
}

.header-right {
  margin-left: auto;
}

.header-right a {
  padding-left: 20px;
  font-size: 20px;
}

.account-forum{
  text-align: center;
  padding-top: 50px;
}

.field{
  padding-top: 10px;
}

.actions{
  padding: 20px;
}

.actions input{
  background-color: rgb(156, 204, 108);
  color: rgb(252, 255, 198);
  padding: 5px 30px;
  border-radius: 30px;
  font-size: 20px;
  border:1px solid black;
  cursor: pointer;
}

.actions input:hover {
  color: rgb(253, 253, 253);
  background-color: rgb(177, 228, 126);
  border:1px solid rgb(131, 131, 131);
}

#error_explanation{
  text-align: left;
  margin: 0 auto;
  width: 300px;
  color: red;
}

.notice{
  background-color: rgb(230, 233, 89);
  text-align: center;
  position: absolute;
  width: 100%;
}

.alert{
  background-color: rgb(233, 89, 89);
  text-align: center;
  position: absolute;
  width: 100%;
}
.delete {
  padding: 20px;
}

.delete input{
  background-color: rgb(233, 89, 89);
  color: rgb(252, 255, 198);
  padding: 5px 10px;
  border-radius: 30px;
  border:1px solid black;
  cursor: pointer;
}

.delete input:hover{
  color: rgb(253, 253, 253);
  background-color: rgb(243, 137, 137);
  border:1px solid rgb(131, 131, 131);
}

.password-form{
  display: inline-block;
}

.devise-links a{
  padding-bottom: 10px;
  display: inline-block;
}

.actions p{
  padding-bottom: 10px;
}

#material-provider{
  width:90%;
  margin:0 auto;
  text-align: center;

}

#material-provider h1{
  padding-top: 100px;
  padding-bottom: 30px;
}

.material-provider-bottom{
  padding-bottom: 100px;
}

.material-provider-name{
  font-size: 20px;
  display: inline-block;
  width:50%;
  text-align: right;
  color: rgb(156, 204, 108);
  text-decoration: none;
  font-weight:bold;
}

.material-provider-name a{
  color: rgb(156, 204, 108);
  text-decoration: none;
  font-weight:bold;
}

.material-provider-url{
  padding-bottom: 30px;
  font-size: 20px;
  display: inline-block;
  text-align: left;
  width:50%
}

.top-move{
  padding:10px;
  display: inline;
}

@media screen and (max-width: 730px) {

  #header {
    padding: 0 15px;
  }

  .header-right a {
    display: block;
    text-align: center;
  }

  #material-provider div{
    display: block;
    width:auto;
    text-align: center;
  }
}
